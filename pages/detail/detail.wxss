.header{
  display: flex;
  padding: 40rpx 30rpx;
  align-items: flex-start;
}
.det_img{
  width: 216rpx;
  height: 216rpx
}
.det_img image{
  width: 100%;
  height: 100%;
}
.det_info{
  flex: 1;
  padding-left: 30rpx;
}
.det_tit{
  display: block;
  font-size: 32rpx;
  color: #fff;
}
.det_author{
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}
.cata_list{
  background: #252424;
}
.cata_list_tit{
  display: block;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  padding: 40rpx 0;
}
.det_time{
  font-size: 24rpx;
  color: #666;
  margin-top: 60rpx;
}
.cata_item{
  display: flex;
  align-items: center;
  padding: 0 40rpx 60rpx;
}
.cata_icon{
  width: 32rpx;
  height: 32rpx;
  line-height: 0;
}
.cata_icon image{
  width: 100%;
  height: 100%;
}
.cata_info{
  flex: 1;
  min-width: 0;
  padding-left: 30rpx;
}

.cata_info_name{
  color: #fff;
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
}
.cata_playnum{
  font-size: 28rpx;
  color: #666;
  display: inline-block;
  vertical-align: middle;
  margin: 10rpx 100rpx 0 0;
}
.cata_playnum image{
  width: 28rpx;
  height: 28rpx;
  display: inline-block;
  vertical-align: middle
}
.cata_playnum text{
  display: inline-block;
  vertical-align: middle
}
.cata_desc{
  font-size: 28rpx;
  color: #fff;
  padding: 30rpx;
  background: #262626;
}

